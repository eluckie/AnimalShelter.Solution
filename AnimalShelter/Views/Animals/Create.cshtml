@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<p><strong>NOTE:</strong> You need to have at least one shelter before you can add an animal!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Shelters") to create a shelter.</p>

<h4>Add a new animal</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br><br>
  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)
  <br><br>
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  <br><br>
  <p>Date Admitted:
    <input id="DateAdmitted" type="date">
  </p>
  @Html.LabelFor(model => model.Shelter)
  @Html.DropDownList("ShelterId")
  <hr>
  <input type="submit" value="Add animal">
}