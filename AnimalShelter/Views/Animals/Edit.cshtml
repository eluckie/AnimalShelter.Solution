@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Edit this animal</h2>
<h4>Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AnimalId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Type)
  @Html.EditorFor(model => model.Type)

  @Html.LabelFor(model => model.Breed)
  @Html.EditorFor(model => model.Breed)

  <p>Date Admitted:
    <input id="DateAdmitted" type="date">
  </p>

  @Html.LabelFor(model => model.Shelter)
  @Html.DropDownList("ShelterId")

  <input type="submit" value="save"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>